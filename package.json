{
  "name": "telegram-lang-enforcer",
  "repository": {
    "type": "git",
    "url": "https://github.com/bartekpacia/telegram-lang-enforcer"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "version": "1.0.0",
  "description": "Simple multi-platform bot enforcing a specific language in groups.",
