  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/core-js": "^2.5.4",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.39",
    "@types/node-telegram-bot-api": "^0.50.4",
    "@types/request": "^2.48.5",
