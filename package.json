  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/core-js": "^2.5.3",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
    "@types/node-telegram-bot-api": "^0.40.3",
    "@types/request": "^2.48.3",
