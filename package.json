    "discord": "node lib/app.js --discord",
    "test": "mocha -r ts-node/register tests/**/*.test.ts"
  },
  "dependencies": {
    "discord.js": "^12.2.0",
    "dotenv": "^6.2.0",
    "firebase-admin": "^8.10.0",
